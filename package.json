{
  "name": "@dns/monorepo",
  "version": "1.0.0",
  "description": "Distributed Notification System - Monorepo",
  "private": true,
  "scripts": {
    "commitlint": "commitlint --edit",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml,yaml}\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,yml,yaml}\" \"test/**/*.ts\"",
    "lint": "eslint \"{services,shared}/**/*.ts\"",
    "lint:fix": "eslint \"{services,shared}/**/*.ts\" --fix",
    "type-check": "pnpm -r --parallel run type-check",
    "build:all": "pnpm -r --parallel run build"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "type-check"
    ]
  },
  "workspaces": [
    "services/*",
    "shared"
  ],
  "keywords": [
    "monorepo",
    "microservices",
    "notification-system",
    "distributed-system"
  ],
  "author": "Obi Emmanuel",
  "license": "ISC",
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "@fastify/mysql": "^5.0.2",
    "@fastify/swagger": "^9.6.0",
    "@fastify/swagger-ui": "^5.2.3",
    "amqplib": "^0.10.9",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "lint-staged": "^16.2.6",
    "opossum": "^9.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@types/amqplib": "^0.10.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0"
  }
}
